@page
@model RamenOrderingWebApp.Pages.RamenMenuModel
@{
}

<div class="text-center">
    <h1 class="display-4">Ramen</h1>
    <h4>Menu</h4>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <div class="w-100 row bg-secondary rounded">
                    <div class="col-4">
                        <img src="~/images/BOWL_unsplash.com_sl_akariya.jpg" class="w-100 rounded" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle text-secondary mt-4">
                            <h5>Can't decide?</h5>
                            <h6>Choose your own broth and ingredients.</h6>
                            <a class="btn btn-primary m-1" asp-area="" asp-page="Forms/Customise">Make my own</a>
                        </div>
                    </div>
                </div>
                
                @foreach (var ramen in Model.fakeRamenDB)
                {
                    var imagepath = "~images/ramen/" + ramen.ImagePath + ".jpg";
                    <div class="col-4 mb-5">
                        <img src="" class="w-100" asp-append-version="true" />
                        <a class="btn btn-primary mt-4" asp-area="" asp-page="/Checkout/Checkout">Get this ramen!</a>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>